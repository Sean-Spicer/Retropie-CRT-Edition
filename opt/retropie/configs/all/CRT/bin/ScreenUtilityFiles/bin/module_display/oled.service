[Unit]
Description=This service search for external USB with almost roms folder and load it on ES
DefaultDependencies=no

[Service]
ExecStart=/usr/bin/python3 -u oled.py
WorkingDirectory=/opt/retropie/configs/all/CRT/bin/ScreenUtilityFiles/bin/module_display
StandardOutput=inherit
StandardError=inherit
Restart=no
User=pi

[Install]
