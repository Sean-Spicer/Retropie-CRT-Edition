<theme>
    <formatVersion>4</formatVersion>
    <include>./../pixel.xml</include>

    <view name="system">
        <image name="console_overlay" extra="true">
            <path>./wallpaper.png</path>
        </image>
        <image name="logo">
            <path>./system.png</path>
        </image>
    </view>
    <view name="basic, detailed, video">
        <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_players, md_lbl_developer, md_developer, md_releasedate, md_lbl_publisher, md_publisher, md_lbl_genre, md_genre, md_lbl_players, md_players, md_lbl_playcount, md_playcount, md_lbl_lastplayed, md_description, md_lastplayed, md_rating">
            <pos>1 1</pos>
        </text>
    </view>
    <view name="basic">
        <image name="logo">
            <path>./system.png</path>
        </image>
        <image name="background" extra="true">
            <path>./wallpaper.png</path>
        </image>
    </view>
    <view name="detailed, video">
        <image name="logo">
            <path>./system.png</path>
        </image>
    </view>
</theme>
