<theme>
    <formatVersion>4</formatVersion>
    <include>./../pixel.xml</include>

    <view name="system">
        <image name="console_overlay" extra="true">
            <tile>false</tile>
            <pos>0.5 0.5</pos>
            <origin>0.5 0.5</origin>
            <maxSize>1 1</maxSize>
            <path>./wallpaper.png</path>
        </image>
        <image name="logo">
            <path>./system.svg</path>
        </image>
        <helpsystem name="help">
            <textColor>ffffff</textColor>
            <iconColor>ffffff</iconColor>
        </helpsystem>
    </view>

    <view name="basic">
        <image name="logo">
            <path>./system.svg</path>
        </image>
        <image name="background" extra="true">
            <tile>false</tile>
            <pos>0.05 0.16</pos>
            <origin>0 0</origin>
            <size>0.9 0.9</size>
            <color>555555</color>
            <path>./wallpaper.png</path>
        </image>
    </view>

    <view name="detailed, video">
        <image name="logo">
            <path>./system.svg</path>
        </image>
    </view>
</theme>
